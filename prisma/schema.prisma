generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  name          String?
  phone         String?
  googleId      String?   @unique
  password      String?
  role          String    @default("Cliente")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  image         String?
  accounts      Account[]
  barber        barber?
  booking       booking[]
  sessions      Session[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BarberShop {
  id          String              @id @default(uuid())
  name        String
  address     String?
  description String?
  status      Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @default(now()) @updatedAt
  imageUrl    String?
  phones      String[]
  rating      String?
  services    BarberShopService[]
  barbers     barber[]
}

model BarberCategory {
  id          String              @id @default(uuid())
  name        String
  IconUrl     String
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @default(now()) @updatedAt
  services    BarberShopService[]
  barbers     barber[]            @relation("BarberToCategory")
}

model BarberShopService {
  id               String                   @id @default(uuid())
  barberShopId     String
  name             String
  description      String?
  price            Decimal                  @db.Decimal(10, 2)
  duration         Int
  status           Boolean                  @default(true)
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @default(now()) @updatedAt
  imageUrl         String
  categoryId       String?
  barberShop       BarberShop               @relation(fields: [barberShopId], references: [id])
  category         BarberCategory?          @relation(fields: [categoryId], references: [id])
  priceAdjustments ServicePriceAdjustment[]
  booking          booking[]
}

model booking {
  id        String            @id @default(uuid())
  userId    String
  dateTime  DateTime
  status    String            @default("Pendente")
  createdAt DateTime          @default(now())
  updatedAt DateTime          @default(now()) @updatedAt
  serviceId String
  barberId  String
  comment   String?
  rating    Int?
  barber    barber            @relation(fields: [barberId], references: [id])
  service   BarberShopService @relation(fields: [serviceId], references: [id])
  user      User              @relation(fields: [userId], references: [id])
}

model barber {
  id              String                   @id @default(uuid())
  name            String
  phone           String?
  photo           String
  userId          String                   @unique
  barberShopId    String
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @default(now()) @updatedAt
  workingHours    BarberWorkingHour[]
  priceAdjustment ServicePriceAdjustment[]
  barberShop      BarberShop               @relation(fields: [barberShopId], references: [id])
  user            User                     @relation(fields: [userId], references: [id])
  booking         booking[]
  categories      BarberCategory[]         @relation("BarberToCategory")
}

model ServicePriceAdjustment {
  id              String            @id @default(uuid())
  serviceId       String
  barberId        String
  priceAdjustment Decimal           @db.Decimal(10, 2)
  createAt        DateTime          @default(now())
  updateAt        DateTime          @default(now()) @updatedAt
  barber          barber            @relation(fields: [barberId], references: [id])
  service         BarberShopService @relation(fields: [serviceId], references: [id])
}

model BarberWorkingHour {
  id        String  @id @default(uuid())
  barberId  String
  weekday   Int
  startTime String
  endTime   String
  barber    barber  @relation(fields: [barberId], references: [id])
  pauses    Pause[]
}

model Pause {
  id            String            @id @default(uuid())
  workingHourId String
  startTime     String
  endTime       String
  workingHour   BarberWorkingHour @relation(fields: [workingHourId], references: [id])
}

model Banner {
  id        String   @id @default(uuid())
  title     String
  subtitle  String
  imageUrl  String
  isActive  Boolean  @default(true)
  order     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model SiteConfig {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String   @default("string")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
