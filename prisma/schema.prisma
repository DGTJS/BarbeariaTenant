generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  name          String?
  image         String?
  phone         String?
  googleId      String?   @unique
  password      String?
  booking       booking[]
  barber        barber?
  accounts      Account[]
  sessions      Session[]
  role          String    @default("Cliente") // Permiss√£o: Cliente, Admin, Barbeiro
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BarberShop {
  id          String              @id @default(uuid())
  name        String
  address     String?
  phones      String[]
  imageUrl    String?
  rating      String?
  description String?
  services    BarberShopService[]
  barbers     barber[]
  status      Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @default(now()) @updatedAt
}

model BarberCategory {
  id          String              @id @default(uuid())
  name        String
  IconUrl     String
  services    BarberShopService[]
  barbers     barber[]            @relation("BarberToCategory")
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @default(now()) @updatedAt
}

model BarberShopService {
  id               String                   @id @default(uuid())
  barberShop       BarberShop               @relation(fields: [barberShopId], references: [id])
  barberShopId     String
  booking          booking[]
  categoryId       String?
  category         BarberCategory?          @relation(fields: [categoryId], references: [id])
  name             String
  description      String?
  price            Decimal                  @db.Decimal(10, 2)
  duration         Int // Duration in minutes
  imageUrl         String
  priceAdjustments ServicePriceAdjustment[]
  status           Boolean                  @default(true)
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @default(now()) @updatedAt
}

model booking {
  id        String            @id @default(uuid())
  userId    String
  user      User              @relation(fields: [userId], references: [id])
  serviceId String
  service   BarberShopService @relation(fields: [serviceId], references: [id])
  barberId  String
  barber    barber            @relation(fields: [barberId], references: [id])
  dateTime  DateTime
  rating    Int? // ‚≠ê Avalia√ß√£o de 1 a 5
  comment   String? // üí¨ Coment√°rio opcional do cliente
  status    String            @default("Pendente") // Status: Pendente, Confirmada, Cancelada
  createdAt DateTime          @default(now())
  updatedAt DateTime          @default(now()) @updatedAt
}

model barber {
  id              String                   @id @default(uuid())
  name            String
  phone           String?
  photo           String
  userId          String                   @unique
  user            User                     @relation(fields: [userId], references: [id])
  booking         booking[]
  priceAdjustment ServicePriceAdjustment[]
  barberShopId    String
  barberShop      BarberShop               @relation(fields: [barberShopId], references: [id])
  categories      BarberCategory[]         @relation("BarberToCategory")
  workingHours    BarberWorkingHour[]      // Hor√°rios de trabalho do barbeiro
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @default(now()) @updatedAt
}

model ServicePriceAdjustment {
  id              String            @id @default(uuid())
  serviceId       String
  service         BarberShopService @relation(fields: [serviceId], references: [id])
  barberId        String
  barber          barber            @relation(fields: [barberId], references: [id])
  priceAdjustment Decimal           @db.Decimal(10, 2)
  createAt        DateTime          @default(now())
  updateAt        DateTime          @default(now()) @updatedAt
}

model BarberWorkingHour {
  id        String   @id @default(uuid())
  barberId  String
  barber    barber   @relation(fields: [barberId], references: [id])
  weekday   Int      // 0 = Domingo, 1 = Segunda, ..., 6 = S√°bado
  startTime String   // "09:00"
  endTime   String   // "18:00"
  pauses    Pause[]  // Rela√ß√£o com as pausas desse dia
}

model Pause {
  id        String   @id @default(uuid())
  workingHourId String
  workingHour   BarberWorkingHour @relation(fields: [workingHourId], references: [id])
  startTime String   // "12:00"
  endTime   String   // "13:00"
}
