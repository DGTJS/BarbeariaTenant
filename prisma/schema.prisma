generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  photo     String?
  phone     String?
  googleId  String?   @unique
  password  String?
  booking   booking[]
  barber    barber?
  role      String    @default("Cliente") // Permiss√£o: Cliente, Admin, Barbeiro
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt @default(now())
}

model BarberShop {
  id          String              @id @default(uuid())
  name        String
  address     String?
  phones      String[]
  imageUrl    String?
  rating      String?
  description String?
  services    BarberShopService[]
  barbers     barber[]
  status      Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime    @updatedAt @default(now())
}

model BarberCategory {
  id          String              @id @default(uuid())
  name        String
  IconUrl     String
  services    BarberShopService[]
  barbers     barber[]            @relation("BarberToCategory")
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt @default(now())
}

model BarberShopService {
  id                 String     @id @default(uuid())
  barberShop         BarberShop @relation(fields: [barberShopId], references: [id])
  barberShopId       String
  booking            booking[]
  categoryId         String?
   category          BarberCategory? @relation(fields: [categoryId], references: [id])
  name               String
  description        String?
  price              Decimal    @db.Decimal(10, 2)
  duration           Int // Duration in minutes
  imageUrl           String
  status             Boolean    @default(true)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt @default(now())
}

model booking {
  id                  String            @id @default(uuid())
  userId              String
  user                User              @relation(fields: [userId], references: [id])
  serviceId           String
  service             BarberShopService @relation(fields: [serviceId], references: [id])
  barberId            String        
  barber              barber            @relation(fields: [barberId], references: [id])
  dateTime            DateTime
  rating              Int?              // ‚≠ê Avalia√ß√£o de 1 a 5
  comment             String?           // üí¨ Coment√°rio opcional do cliente
  status              String            @default("Pendente") // Status: Pendente, Confirmada, Cancelada
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt @default(now())
}

model barber{
  id                  String            @id @default(uuid())
  name                String
  phone               String?
  photo               String
  userId              String            @unique
  user                User              @relation(fields: [userId], references: [id])
  booking             booking[]
  barberShopId        String
  barberShop          BarberShop        @relation(fields: [barberShopId], references: [id])
  categories          BarberCategory[]  @relation("BarberToCategory")
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt @default(now())
}